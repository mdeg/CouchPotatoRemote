<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="no.dega.couchpotatoer"
    android:versionCode="1"
    android:versionName="1.0">

    <!-- remove these when migrate to test project -->
    <instrumentation
        android:name="android.test.InstrumentationTestRunner"
        android:label="APIUtilitiesTest"
        android:targetPackage="no.dega.couchpotatoer" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-sdk
        android:minSdkVersion="12"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/CouchpotatoTheme">
        <uses-library android:name="android.test.runner" />

        <activity
            android:name="no.dega.couchpotatoer.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="no.dega.couchpotatoer.MovieViewActivity"
            android:label="@string/movie_view"
            android:parentActivityName="no.dega.couchpotatoer.MainActivity"></activity>
        <activity
            android:name="no.dega.couchpotatoer.SettingsActivity"
            android:label="@string/title_activity_settings"></activity>
        <activity
            android:name="no.dega.couchpotatoer.AddMovieActivity"
            android:label="@string/title_activity_add_movie"
            android:parentActivityName="no.dega.couchpotatoer.MainActivity">
            <!-- Compatibility support -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="no.dega.couchpotatoer.MainActivity" />
        </activity>
    </application>

</manifest>
