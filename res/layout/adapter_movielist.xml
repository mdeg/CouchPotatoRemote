<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/ListViewCells">

    <ImageView
        android:id="@+id/adapter_poster"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:maxHeight="100dp"
        android:maxWidth="55dp"
        android:layout_margin="1dp"
        android:layout_alignTop="@+id/adapter_title"
        />

    <no.dega.couchpotatoremote.FontedTextView
        android:id="@id/adapter_title"
        style="@style/ListViewCells"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@id/adapter_poster"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:singleLine="true"
        android:ellipsize="end"
        />

    <no.dega.couchpotatoremote.FontedTextView
        android:id="@+id/adapter_year"
        style="@style/ListViewCells"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:paddingLeft="5dp"
        android:textStyle="bold"
        android:textSize="20sp"
        />

    <no.dega.couchpotatoremote.FontedTextView
        android:id="@+id/adapter_plot"
        style="@style/ListViewCells"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_toRightOf="@id/adapter_poster"
        android:layout_below="@id/adapter_title"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="5dp"
        android:singleLine="false"
        android:ellipsize="end"
        />

</RelativeLayout>