<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="no.dega.couchpotatoremote" android:versionCode="1" android:versionName="1.0">

    <!-- remove these when migrate to test project -->
    <instrumentation android:name="android.test.InstrumentationTestRunner"
        android:label="APIUtilitiesTest" android:targetPackage="no.dega.couchpotatoremote" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-sdk android:minSdkVersion="12" android:targetSdkVersion="18" />

    <application android:allowBackup="true" android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" android:theme="@style/AppTheme">
        <uses-library android:name="android.test.runner" />

        <activity android:name="no.dega.couchpotatoremote.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="no.dega.couchpotatoremote.MovieViewActivity"
            android:label="@string/movie_view"
            android:parentActivityName="no.dega.couchpotatoremote.MainActivity"></activity>
        <activity android:name="no.dega.couchpotatoremote.SettingsActivity"
            android:label="@string/title_activity_settings"></activity>
        <activity android:name="no.dega.couchpotatoremote.AddMovieActivity"
            android:label="@string/title_activity_add_movie" android:parentActivityName="no.dega.couchpotatoremote.MainActivity">
            <!-- Compatibility support -->
            <meta-data android:name="android.support.PARENT_ACTIVITY"
                android:value="no.dega.couchpotatoremote.MainActivity" />
        </activity>
    </application>

</manifest>
